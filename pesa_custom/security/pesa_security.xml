<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="0">
        <record model="ir.module.category" id="module_pesa_category">
            <field name="name">Pesa</field>
            <field name="sequence">20</field>
        </record>
        <record id="group_pesa_user" model="res.groups">
            <field name="name">Pesa Master User</field>
            <field name="category_id" ref="module_pesa_category"/>
        </record>
        <record id="group_pesa_manager" model="res.groups">
            <field name="name">Pesa Master Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_pesa_user'))]"/>
            <field name="category_id" ref="module_pesa_category" />
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>
    </data>
    <data noupdate="1">
        <record id="pesa_journey" model="ir.rule">
            <field name="name">Journey</field>
            <field name="model_id" ref="model_journey"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>
        <record id="pesa_real_line" model="ir.rule">
            <field name="name">Real Line</field>
            <field name="model_id" ref="model_real_line"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>
        <record id="pesa_schedule" model="ir.rule">
            <field name="name">Schedule</field>
            <field name="model_id" ref="model_schedule"/>
            <field name="global" eval="True"/>
            <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
        </record>
    </data>
</openerp>
