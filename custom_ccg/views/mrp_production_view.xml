<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="mrp_production_packaging_view_form" model="ir.ui.view">
            <field name="name">mrp.production.packaging.form</field>
            <field name="model">mrp.production</field>
            <field name="inherit_id" ref="mrp_production_sale_info.mrp_production_sale_info_form_view" />
            <field name="arch" type="xml">
                <field name="date_planned" position="after">
                    <field name="product_packaging"/>
                </field>
                <field name="sale_order" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="partner" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="sale_line" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <field name="move_prod_id" position="after">
                    <field name="partner_id"/>
                    <field name="sale_order_id" domain="[('partner_id', '=', partner_id)]"/>
                </field>
            </field>
        </record>
    </data>
</openerp>
