<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="external_layout_header" inherit_id="report.external_layout_header">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <div class="row">
                        <div class="col-xs-6">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <address class="mb0 astikar_header" itemscope="itemscope"
                                     itemtype="http://schema.org/Organization">
                                <span t-field="company.partner_id.street" /><br />
                                <div class="col-xs-12" style="padding-left:0px;">
                                <div class="col-xs-8" style="padding-left:0px;">
                                <span t-field="company.partner_id.street2" /><br />
                                <span t-field="company.partner_id.zip" /> - <span t-field="company.partner_id.city" /> (<span t-field="company.partner_id.state_id" />)<br /></div>
                                <div class="col-xs-4" style="padding-left:0px;">Tel.: <span t-field="company.partner_id.phone"/><br />
                                Fax: <span t-field="company.partner_id.fax" />
                                </div></div>
                                <span t-field="company.partner_id.website" />
                            </address>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>
    </data>
</openerp>
